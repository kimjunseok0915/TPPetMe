<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp"
    android:backgroundTint="@color/brandColorDark">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/iv_popfile"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:scaleType="fitXY"
          android:src="@drawable/simple_dog"
          android:padding="8dp"
          android:background="@color/black"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:layout_margin="6dp"
          android:orientation="vertical">
          <TextView
              android:id="@+id/tv_kindCd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:text="품종: 진돗개"/>
          <TextView
              android:id="@+id/tv_age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="나이: 2살 "
              android:textColor="@color/white"/>
          <TextView
              android:id="@+id/tv_SexCd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="성: M "
              android:textColor="@color/white"/>

          <TextView
          android:id="@+id/tv_weight"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="체중: 5.5kg "
          android:textColor="@color/white"/>


          <TextView
              android:id="@+id/tv_specialMark"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="특징:ㅇㅇㅇㅇㅇㅇㅇㅇ "
              android:textColor="@color/white"/>







      </LinearLayout>


  </LinearLayout>

</androidx.cardview.widget.CardView>