<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_popfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/simple_dog"
            android:padding="8dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_kindCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="품종: 진돗개"/>

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이: 2살 "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_SexCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성: M "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중: 5.5kg "
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/tv_specialMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특징:ㅇㅇㅇㅇㅇㅇㅇㅇ "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_careNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호소 이름: "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_careTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호소 전화번호: 010 2424 8686 "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_careAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호장소: 서울시 무슨동 무슨구 무슨로  "
                android:textColor="@color/black"/>





        </LinearLayout>


    </LinearLayout>


</LinearLayout>